<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/detailsBG"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:paddingBottom="10dp">

        <ImageView
            android:id="@+id/WeaponImg"
            android:layout_width="70dp"
            android:layout_height="87dp"
            android:layout_gravity="center"
            android:src="@drawable/w_1201" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Name">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/WeaponName"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:text="Cool Steel"
                    android:textColor="@color/black"
                    android:textSize="30dp" />
                <ImageView
                    android:id="@+id/Stars"
                    android:layout_below="@id/Name"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:src="@drawable/five" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/top"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <!--            android:background="@drawable/border">-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="86dp"
                    android:layout_gravity="center"
                    android:src="@drawable/atk" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/WeaponDmg"
                    android:layout_width="110dp"
                    android:layout_height="match_parent"
                    android:textSize="40dp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <!--            android:background="@drawable/border">-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/WeaponSubStat"
                    android:layout_width="70dp"
                    android:layout_height="86dp"
                    android:src="@drawable/w_1201" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/WeaponStats"
                    android:layout_width="110dp"
                    android:layout_height="match_parent"
                    android:textSize="40dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/first"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/desc"
        android:background="@color/purple_200"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="vertical">

            <TextView
                android:layout_width="164dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="32dp"
                android:text="Special (passive) Ability Description"
                android:textColor="@color/black"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/details1"
                android:layout_width="51dp"
                android:layout_height="51dp"
                android:background="@null"
                android:foregroundGravity="center"
                android:onClick="show"
                android:src="@drawable/arrow" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/second"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/first"
        android:layout_marginTop="160dp"
        android:background="@color/purple_200"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="vertical">

            <TextView
                android:layout_width="164dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="32dp"
                android:text="In-Game Description"
                android:textColor="@color/black"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/details2"
                android:layout_width="51dp"
                android:layout_height="51dp"
                android:background="@null"
                android:foregroundGravity="center"
                android:onClick="show"
                android:src="@drawable/arrow" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/third"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="160dp"
        android:layout_below="@id/second"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="vertical">

            <ImageButton
                android:layout_gravity="left"
                android:id="@+id/moreDetails"
                android:layout_width="121dp"
                android:layout_height="51dp"
                android:background="@color/black"
                android:onClick="show"
                android:src="@drawable/arrow"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <ImageButton
                android:id="@+id/calculator"
                android:layout_width="121dp"
                android:layout_height="51dp"
                android:layout_gravity="right"
                android:background="@color/black"
                android:onClick="show"
                android:src="@drawable/arrow"/>
        </LinearLayout>
    </LinearLayout>

    <com.github.aakira.expandablelayout.ExpandableRelativeLayout
        android:id="@+id/special"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@id/first"
        android:layout_marginTop="10dp"
        android:paddingLeft="32dp"
        android:paddingRight="32dp"
        app:ael_duration="1000"
        app:ael_expanded="false"
        app:ael_interpolator="anticipateOvershoot"
        app:ael_orientation="vertical">

        <TextView
            android:id="@+id/SDescriptionText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="5dp"
            android:text="More contents More contents More contents More contents More contents More contents"
            android:textColor="@color/black"
            android:textSize="14dp" />
    </com.github.aakira.expandablelayout.ExpandableRelativeLayout>

    <com.github.aakira.expandablelayout.ExpandableRelativeLayout
        android:id="@+id/inGame"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@id/second"
        android:layout_marginTop="10dp"
        android:paddingLeft="32dp"
        android:paddingRight="32dp"
        app:ael_duration="1000"
        app:ael_expanded="false"
        app:ael_interpolator="anticipateOvershoot"
        app:ael_orientation="vertical">

        <TextView
            android:id="@+id/IDescriptionText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="5dp"
            android:text="More contents More contents More contents More contents More contents More contents"
            android:textColor="@color/black"
            android:textSize="14dp" />
    </com.github.aakira.expandablelayout.ExpandableRelativeLayout>

</RelativeLayout>