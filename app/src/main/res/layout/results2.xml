<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/bg">


    <ImageView
        android:id="@+id/banner"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:src="@drawable/banner_mon" />

    <ImageView
        android:id="@+id/pic"
        android:layout_width="180dp"
        android:layout_height="250dp"
        android:paddingLeft="20dp"
        android:paddingTop="40dp"
        android:src="@drawable/itto" />

    <LinearLayout
        android:layout_width="120dp"
        android:layout_height="70dp"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="100dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/charMat1Img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/w_2313" />

        <TextView
            android:id="@+id/charMat1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BACK"
            android:textSize="20dp"
            android:textColor="@android:color/black" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="120dp"
        android:layout_height="70dp"
        android:layout_marginLeft="270dp"
        android:layout_marginTop="100dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/charMat2Img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/w_2313" />

        <TextView
            android:id="@+id/charMat2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BACK"
            android:textSize="20dp"
            android:textColor="@android:color/black" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="120dp"
        android:layout_height="70dp"
        android:layout_marginLeft="210dp"
        android:layout_marginTop="145dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/charMat3Img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/w_2313" />

        <TextView
            android:id="@+id/charMat3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BACK"
            android:textSize="20dp"
            android:textColor="@android:color/black" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/first"
        android:layout_width="160dip"
        android:layout_height="70dip"
        android:layout_below="@id/pic"
        android:gravity="center"
        android:layout_marginLeft="30dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/bossMatImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/w_2313" />

        <TextView
            android:id="@+id/bossMat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BACK"
            android:textColor="@android:color/black"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/second"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/first"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="160dip"
                android:layout_height="70dip"
                android:gravity="center"
                android:layout_marginLeft="30dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/book1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BACK"
                    android:textColor="@android:color/black"
                    android:textSize="20dp" />

                <ImageView
                    android:id="@+id/book1Img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/w_2313" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="160dip"
                android:layout_height="70dip"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/mora"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/w_2313" />

                <TextView
                    android:id="@+id/tMora"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BACK"
                    android:textSize="20dp"
                    android:textColor="@android:color/black" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/third"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/second"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="160dip"
                android:layout_height="70dip"
                android:gravity="center"
                android:layout_marginLeft="30dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/book2Img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/w_2313" />

                <TextView
                    android:id="@+id/book2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BACK"
                    android:textColor="@android:color/black"
                    android:textSize="20dp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="160dip"
                android:layout_height="70dip"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/crownImg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/w_2313" />

                <TextView
                    android:id="@+id/crownTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BACK"
                    android:textSize="20dp"
                    android:textColor="@android:color/black" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/fourth"
        android:layout_width="160dip"
        android:layout_height="70dip"
        android:layout_below="@id/third"
        android:gravity="center"
        android:layout_marginLeft="30dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/book3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BACK"
            android:textColor="@android:color/black"
            android:textSize="20dp" />

        <ImageView
            android:id="@+id/book3Img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/w_2313" />
    </LinearLayout>

    <ImageView
        android:id="@+id/pic2"
        android:layout_width="180dp"
        android:layout_height="250dp"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="450dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/itto" />

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="630dp"
        android:background="@color/transparent"
        android:onClick="onClick"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/arrow" />

</RelativeLayout>