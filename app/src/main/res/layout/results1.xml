<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/bg">


    <ImageView
        android:id="@+id/banner"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:src="@drawable/banner_mon" />

    <ImageView
        android:id="@+id/pic"
        android:layout_width="120dp"
        android:layout_height="130dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="70dp"
        android:src="@drawable/itto" />

    <LinearLayout
        android:layout_width="110dp"
        android:layout_height="70dp"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="100dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/charMat1Img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/w_2313" />

        <TextView
            android:id="@+id/charMat1"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:text="BACK22"
            android:textColor="@android:color/black"
            android:textSize="15dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="110dp"
        android:layout_height="70dp"
        android:layout_marginLeft="290dp"
        android:layout_marginTop="100dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/charMat2Img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/w_2313" />

        <TextView
            android:id="@+id/charMat2"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:text="BACK"
            android:textColor="@android:color/black"
            android:textSize="15dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="110dp"
        android:layout_height="70dp"
        android:layout_marginLeft="240dp"
        android:layout_marginTop="180dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/charMat3Img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/w_2313" />

        <TextView
            android:id="@+id/charMat3"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:text="BACK"
            android:textColor="@android:color/black"
            android:textSize="15dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/first"
        android:layout_width="160dip"
        android:layout_height="70dip"
        android:layout_below="@id/pic"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/stone1Img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:src="@drawable/w_2313" />

        <TextView
            android:id="@+id/stone1"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="BACK"
            android:textColor="@android:color/black"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/second"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/first"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="160dip"
                android:layout_height="70dip"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/stone2"
                    android:layout_width="90dp"
                    android:layout_marginRight="20dp"
                    android:gravity="right"
                    android:textAlignment="gravity"
                    android:layout_height="wrap_content"
                    android:text="BACK"
                    android:textColor="@android:color/black"
                    android:textSize="20dp" />

                <ImageView
                    android:id="@+id/stone2Img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/w_2313" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="190dip"
                android:layout_height="70dip"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/mora"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/w_2313" />

                <TextView
                    android:id="@+id/cMora"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="BACK2"
                    android:textColor="@android:color/black"
                    android:textSize="20dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/third"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/second"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="160dip"
                android:layout_height="70dip"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/stone3Img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:src="@drawable/w_2313" />

                <TextView
                    android:id="@+id/stone3"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="BACK"
                    android:textColor="@android:color/black"
                    android:textSize="20dp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="190dip"
                android:layout_height="70dip"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/LocalMatImg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/w_2313" />

                <TextView
                    android:id="@+id/LocalMat"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="BACK2"
                    android:textColor="@android:color/black"
                    android:textSize="20dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/fourth"
        android:layout_width="160dip"
        android:layout_height="70dip"
        android:layout_below="@id/third"
        android:layout_marginLeft="10dp"
        android:gravity="center"

        android:orientation="horizontal">

        <TextView
            android:id="@+id/stone4"
            android:layout_width="90dp"
            android:layout_marginRight="20dp"
            android:gravity="right"
            android:textAlignment="gravity"
            android:layout_height="wrap_content"
            android:text="BACK"
            android:textColor="@android:color/black"
            android:textSize="20dp" />

        <ImageView
            android:id="@+id/stone4Img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/w_2313" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/fifth"
        android:layout_width="160dip"
        android:layout_height="70dip"
        android:layout_below="@id/fourth"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/bossMatImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:src="@drawable/w_2313" />

        <TextView
            android:id="@+id/bossMat"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="BACK"
            android:textColor="@android:color/black"
            android:textSize="20dp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/pic2"
        android:layout_width="280dp"
        android:layout_height="280dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:src="@drawable/amber_bg" />

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="100dp"
        android:background="@color/transparent"
        android:onClick="onClick"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/arrow" />

</RelativeLayout>